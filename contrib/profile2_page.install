/**
 * @file
 * Install, update and uninstall functions for the profile page module.
 */

/**
 * Implements hook_install().
 */
function profile2_page_install() {
  // Enable the module by default for the default profile type.
  if ($type = profile2_get_types('main')) {
    $type->data['use_page'] = TRUE;
    $type->save();
  }
}
